<div class="banner" style="background-image: url('https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80')">
  <div class="container">
    <h1><%= @list.name %> <strong>movies</strong></h1>
    <%# <a class="btn btn-primary" href="#">Apply now</a> %>
  </div>
</div>
<div class="container mt-5">

  <% @list.movies.each do |movie| %>
    <h2><%= movie.title %></h2>
    <ul>
      <li><%= image_tag (movie.poster_url), width: 100 %></li>
      <li><%= movie.overview %></li>
      <li><%= movie.rating %></li>
    </ul>
    <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
    <p><%= bookmark.comment %></p>
    <%= link_to 'Delete bookmark', bookmark_path(bookmark), method: :delete, data: { confirm: "Seguro?" }, class: "btn btn-primary" %>
  <% end %>

  <%= link_to "Back to lists", lists_path, class: "btn btn-primary" %>

  <%= link_to "Add a new bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>

</div>
