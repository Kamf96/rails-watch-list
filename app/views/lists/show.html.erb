<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 500, width: 500, crop: :fit %>')">
  <div class="container">
    <h1><%= @list.name %> <strong>movies</strong></h1>
    <%# <a class="btn btn-primary" href="#">Apply now</a> %>
  </div>
</div>
<div class="container mt-5">

  <% @list.movies.each do |movie| %>
    <h2><%= movie.title %></h2>
    <ul>
      <li><%= image_tag (movie.poster_url), width: 100 %></li>
      <li><%= movie.overview %></li>
      <li><%= movie.rating %></li>
    </ul>
    <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
    <p><%= bookmark.comment %></p>
    <%= link_to 'Delete bookmark', bookmark_path(bookmark), method: :delete, data: { confirm: "Seguro?" }, class: "btn btn-primary" %>
  <% end %>

  <%= link_to "Back to lists", root_path, class: "btn btn-primary" %>

  <%= link_to "Add a new bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>

</div>
