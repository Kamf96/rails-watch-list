<div class="banner">
  <div class="container">
    <h1>Save any kind of <strong>movies</strong>!</h1>
    <p>Classic</p>
    <%# <a class="btn btn-primary" href="#">Apply now</a> %>
  </div>
</div>

<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between">
    <h2>Lists of categories ðŸŽ¬</h2>
    <%= link_to 'Create a movie list', new_list_path, class: "btn btn-success" %>
  </div>

  <div class="row">
    <% @lists.each do |category| %>
      <div class="col-12 col-sm-6 col-md-4 mb-3">
          <%= link_to list_path(category), class: "text-decoration-none" do %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path category.photo.key, height: 300, crop: :fill %>')">
              <%= category.name %>
            </div>
          <% end %>
      </div>
    <% end %>
  </div>
</div>
